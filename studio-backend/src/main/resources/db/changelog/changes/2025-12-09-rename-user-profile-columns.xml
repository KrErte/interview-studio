<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="2025-12-09-rename-user-profile-columns" author="backend-bot">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <and>
                <columnExists tableName="user_profile" columnName="current_role"/>
                <columnExists tableName="user_profile" columnName="target_role"/>
            </and>
        </preConditions>

        <renameColumn tableName="user_profile"
                      oldColumnName="current_role"
                      newColumnName="current_role_name"
                      columnDataType="VARCHAR(255)"/>

        <renameColumn tableName="user_profile"
                      oldColumnName="target_role"
                      newColumnName="target_role_name"
                      columnDataType="VARCHAR(255)"/>
    </changeSet>

</databaseChangeLog>

