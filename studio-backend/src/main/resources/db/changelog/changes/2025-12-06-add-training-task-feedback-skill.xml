<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="2025-12-06-add-training-task-feedback-skill" author="cursor">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <and>
                    <columnExists tableName="training_task" columnName="skill_key"/>
                    <columnExists tableName="training_task" columnName="feedback"/>
                </and>
            </not>
        </preConditions>

        <addColumn tableName="training_task">
            <column name="skill_key" type="VARCHAR(255)"/>
        </addColumn>

        <addColumn tableName="training_task">
            <column name="feedback" type="CLOB"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>













