    <changeSet id="002-add-completed-and-score-updated" author="ai-helper">

        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="training_task" columnName="score_updated_at"/>
            </not>
        </preConditions>

        <addColumn tableName="training_task">
            <column name="score_updated_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </addColumn>

    </changeSet>
</databaseChangeLog>
