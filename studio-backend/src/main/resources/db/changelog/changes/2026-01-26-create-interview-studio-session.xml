<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="2026-01-26-create-interview-studio-session" author="claude">
        <createTable tableName="interview_studio_session">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Public share ID (UUID) -->
            <column name="share_id" type="VARCHAR(36)">
                <constraints unique="true"/>
            </column>

            <!-- User association (null for guest sessions) -->
            <column name="user_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>

            <!-- Session mode -->
            <column name="mode" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <!-- Target role -->
            <column name="target_role" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <!-- Experience level (simple mode) or last worked (advanced) -->
            <column name="experience_level" type="VARCHAR(50)"/>
            <column name="last_worked_in_role" type="VARCHAR(50)"/>

            <!-- Urgency (advanced mode) -->
            <column name="urgency" type="VARCHAR(50)"/>

            <!-- Main challenge (simple) or blocker (advanced) -->
            <column name="main_challenge" type="VARCHAR(100)"/>
            <column name="main_blocker" type="VARCHAR(100)"/>

            <!-- Recent work examples (advanced mode) -->
            <column name="recent_work_examples" type="CLOB"/>

            <!-- CV text (advanced mode) -->
            <column name="cv_text" type="CLOB"/>

            <!-- Assessment result -->
            <column name="status" type="VARCHAR(10)"/>
            <column name="blockers_json" type="CLOB"/>
            <column name="teaser_action" type="VARCHAR(500)"/>

            <!-- Paid content -->
            <column name="is_paid" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="plan_json" type="CLOB"/>
            <column name="cv_rewrite_bullets_json" type="CLOB"/>
            <column name="roles_to_avoid_json" type="CLOB"/>
            <column name="pivot_suggestion" type="VARCHAR(500)"/>

            <!-- Payment tracking -->
            <column name="payment_intent_id" type="VARCHAR(100)"/>
            <column name="paid_at" type="TIMESTAMP"/>

            <!-- Timestamps -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Index for user lookups -->
        <createIndex tableName="interview_studio_session" indexName="idx_iss_user_id">
            <column name="user_id"/>
        </createIndex>

        <!-- Index for share lookups -->
        <createIndex tableName="interview_studio_session" indexName="idx_iss_share_id">
            <column name="share_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
