<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.26.xsd">

    <!-- Drop vana STATUS tulp training_progress tabelist.
         Kui seda veerus pole (nt värskel andmebaasil), märgitakse changeset lihtsalt RAN. -->
    <changeSet id="2025-12-03-02-drop-old-status-column-training-progress" author="ai">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="training_progress" columnName="status"/>
        </preConditions>

        <dropColumn tableName="training_progress" columnName="status"/>
    </changeSet>

</databaseChangeLog>
