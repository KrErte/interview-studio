<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <!-- AINULT training_progress tabel, mitte Ã¼htegi addColumn-it training_task peale -->

    <changeSet id="008-create-training-progress-table" author="ai-helper">
        <createTable tableName="training_progress">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="uk_training_progress_email"/>
            </column>

            <column name="total_tasks" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="completed_tasks" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="progress_percent" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="last_updated" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>
