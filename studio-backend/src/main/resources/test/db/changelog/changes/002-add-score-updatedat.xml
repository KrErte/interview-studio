<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="002-add-completed-and-score-updated" author="ai-helper">

        <!-- completed veerg training_task tabelile -->
        <addColumn tableName="training_task">
            <column name="completed" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- score_updated veerg training_task tabelile -->
        <addColumn tableName="training_task">
            <column name="score_updated" type="TIMESTAMP"/>
        </addColumn>

    </changeSet>

</databaseChangeLog>
